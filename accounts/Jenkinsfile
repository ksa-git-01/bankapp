pipeline {
    agent any

    parameters {
        choice(name: 'ENVIRONMENT', choices: ['test', 'prod'], description: 'Target environment')
        booleanParam(name: 'SKIP_TESTS', defaultValue: false, description: 'Skip unit tests')
    }

    environment {
        SERVICE_NAME = 'accounts'
        WORKSPACE_PATH = '/workspace/bankapp'
        DOCKER_REGISTRY = 'localhost:5000'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        MAVEN_OPTS = '-Dmaven.repo.local=.m2/repository'
    }

    stages {
        stage('Validate') {
            steps {
                echo "Building ${SERVICE_NAME} for ${params.ENVIRONMENT} environment"
                dir("${WORKSPACE_PATH}/${SERVICE_NAME}") {
                    sh 'mvn validate'
                }
            }
        }

        stage('Build') {
            steps {
                dir("${WORKSPACE_PATH}/${SERVICE_NAME}") {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Test') {
            when {
                expression { !params.SKIP_TESTS }
            }
            steps {
                dir("${WORKSPACE_PATH}/${SERVICE_NAME}") {
                    sh 'mvn test'
                }
            }
            post {
                always {
                    junit "${WORKSPACE_PATH}/${SERVICE_NAME}/target/surefire-reports/*.xml"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dir("${WORKSPACE_PATH}/${SERVICE_NAME}") {
                        sh """
                            docker build -t ${DOCKER_REGISTRY}/${SERVICE_NAME}:${IMAGE_TAG} .
                            docker tag ${DOCKER_REGISTRY}/${SERVICE_NAME}:${IMAGE_TAG} ${DOCKER_REGISTRY}/${SERVICE_NAME}:latest
                        """
                    }
                }
            }
        }

        stage('Push to Registry') {
            steps {
                script {
                    sh """
                        docker push ${DOCKER_REGISTRY}/${SERVICE_NAME}:${IMAGE_TAG}
                        docker push ${DOCKER_REGISTRY}/${SERVICE_NAME}:latest
                    """
                }
            }
        }

        stage('Deploy to Test') {
            when {
                expression { params.ENVIRONMENT == 'test' }
            }
            steps {
                script {
                    sh """
                        helm upgrade --install ${SERVICE_NAME} ${WORKSPACE_PATH}/helm/${SERVICE_NAME} \
                            --namespace test \
                            --create-namespace \
                            --set image.tag=${IMAGE_TAG} \
                            --set image.repository=${DOCKER_REGISTRY}/${SERVICE_NAME} \
                            --wait
                    """
                }
            }
        }

        stage('Deploy to Prod') {
            when {
                expression { params.ENVIRONMENT == 'prod' }
            }
            steps {
                input message: 'Deploy to Production?', ok: 'Deploy'
                script {
                    sh """
                        helm upgrade --install ${SERVICE_NAME} ${WORKSPACE_PATH}/helm/${SERVICE_NAME} \
                            --namespace prod \
                            --create-namespace \
                            --set image.tag=${IMAGE_TAG} \
                            --set image.repository=${DOCKER_REGISTRY}/${SERVICE_NAME} \
                            --wait
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully for ${SERVICE_NAME}"
        }
        failure {
            echo "Pipeline failed for ${SERVICE_NAME}"
        }
        cleanup {
            cleanWs()
        }
    }
}
